import random

def generate_quote():
    quotes = [
        "Жизнь как велосипед - чтобы сохранить равновесие, нужно двигаться.",
        "Не тот человек счастлив, у кого много, а тот, кто мало нуждается.",
        "Лучший способ предсказать будущее - создать его.",
        "Сложные вещи часто начинаются с простых шагов.",
        "Счастье не в том, чтобы иметь все, а в том, чтобы радоваться тому, что есть.",
        "Будь смелым, когда тебя никто не поддерживает. Будь добрым, когда ты силен.",
        "Только тот, кто рискует ошибиться, заслуживает успеха.",
        "Секрет успеха - делать обычные вещи необычным способом."
    ]

    return random.choice(quotes)

if __name__ == "__main__":
    quote = generate_quote()
    print("Цитата дня:")
    print(quote)
